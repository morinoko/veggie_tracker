<!doctype html>
<html>
  <head>
    <%= erb :'partials/head' %>
  </head>
  
  <body>
    <header>
      <%= erb :'partials/navbar' %>
    </header>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <% if flash.has?(:notice) %>
            <div class="alert alert-light" role="alert">
              <%= flash[:notice] %>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>
    <%= erb :'partials/scripts' %>
  </body>
</html>